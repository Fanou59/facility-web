generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ajout des modèles
// Modifier le champ Services, ajouter les champs de DetailServices
// Ajouter un champ résumé à la table Services
model Services{
  id Int @id @default(autoincrement())
  title String
  description String @db.Text
  imageUrl String
  alt String
}

// Supprimer le modèle DetailServices
model DetailServices{
  id Int @id @default(autoincrement())
  title String
  description String @db.Text
  imageUrl String
  alt String
  synthese Json
}
